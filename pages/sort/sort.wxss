.sortcon{
  display: flex;
  flex-flow: row;
  width: 100%;
  height: 100%
}
.sortcon-left{
  width: 200rpx;
  height: 100%;
  margin-right:20rpx;
  background: #fff 
}
.sortcon-right{
  flex: 1;
  height: 100%;
  background: #fff 
}
.left-in{
  box-sizing:border-box;
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  text-align: center;
  color: #000;
  border-right:1rpx solid #D9D9D9; 
  border-bottom:1rpx solid #D9D9D9; 
  
}
.left-in.active{
  background:#f8f9fb;
  color: #FD9D1E;
  border-right:1rpx solid #f8f9fb; 
}
.right-item{
  width: 33%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  float: left;
  color: #848689
}